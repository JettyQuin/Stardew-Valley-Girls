{
	"Format": "1.21.0",
	"ConfigSchema": {
		"Map to Replace": {
			"AllowValues": "Standard, Riverland, Forest, Hilltop, Wilderness, FourCorners, Beach",
			"Default": "Forest"
		},
		
		"Permanent Decor": {
			"AllowValues": "true, false",
			"Default": "true"
		},
		
		"Deep Cave": {
			"AllowValues": "true, false",
			"Default": "true"
		}
	},
	"DynamicTokens": [
		{
			"Name": "MapType",
			"Value": "_Foraging"
		},
		
		{
			"Name": "MapType",
			"Value": "",
			"When": {"Map to Replace": "Standard"}
		},
		
		{
			"Name": "MapType",
			"Value": "_Fishing",
			"When": {"Map to Replace": "Riverland"}
		},
		
		{
			"Name": "MapType",
			"Value": "_Mining",
			"When": {"Map to Replace": "Hilltop"}
		},
		
		{
			"Name": "MapType",
			"Value": "_Combat",
			"When": {"Map to Replace": "Wilderness"}
		},
		
		{
			"Name": "MapType",
			"Value": "_FourCorners",
			"When": {"Map to Replace": "FourCorners"}
		},
		
		{
			"Name": "MapType",
			"Value": "_Island",
			"When": {"Map to Replace": "Beach"}
		},
	],
	"CustomLocations": [
		{
			"Name": "Custom_SecretGarden_DeepCave",
			"FromMapFile": "assets/DeepCave.tmx"
		}
	],
	"Changes": [
		{
			"LogName": "Cave Tilesheets",
			"Action": "Load",
			"Target": "Maps/z_caveDecor",
			"FromFile": "assets/cave decor.png"
		},
		
		{
			"LogName": "Farm Map",
			"Action": "Load",
			"Target": "Maps/Farm{{MapType}}",
			"FromFile": "assets/Farm_Garden.tmx",
			"When": {"Permanent Decor": "true"}
		},
		
		{
			"LogName": "Farm Map Cleared",
			"Action": "Load",
			"Target": "Maps/Farm{{MapType}}",
			"FromFile": "assets/Farm_GardenClear.tmx",
			"When": {"Permanent Decor": "false"}
		},
		
		{
			"LogName": "Cave Entrance Patch",
			"Action": "EditMap",
			"Target": "Maps/Farm{{MapType}}",
			"FromFile": "assets/EntrancePatch.tmx",
			"ToArea": {"X": 3, "Y": 21, "Width": 10, "Height": 6},
			"When": {"Deep Cave": "true"}
		},
		
		{
			"LogName": "Cave Entrance Warp",
			"Action": "EditMap",
			"Target": "Maps/Farm{{MapType}}",
			"AddWarps": ["6 24 Custom_SecretGarden_DeepCave 13 29"],
			"When": {"Deep Cave": "true"}
		},
		
		{
			"LogName": "Farm Cave Map",
			"Action": "Load",
			"Target": "Maps/FarmCave",
			"FromFile": "assets/FarmCave.tmx",
			"When": {
				"FarmType": "{{Map to Replace}}",
				"Deep Cave": "true"
			}
		}
	]
}